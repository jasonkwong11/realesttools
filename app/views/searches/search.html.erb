<h1>Search for Properties Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :'street address' %>
  <%= text_field_tag :address %>

  <%= label_tag :'city, state and zip' %>
  <%= text_field_tag :citystatezip %>
  <%= submit_tag "Search!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @venues %>
    <ul>
    <% @venues.each do |venue| %>
      <li>
        <%= venue["name"] %><br>
        <%= venue["location"]["address"] %><br>
        Checkins: <%= venue["stats"]["checkinsCount"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>